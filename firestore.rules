
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for the users collection
    match /users/{userId} {
      // Allow a user to read their own document. This is crucial for the app to check their role.
      allow read: if request.auth != null && request.auth.uid == userId;

      // Allow a user to create their own profile document.
      // Only admins can update or delete other user profiles.
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Rules for the events collection
    match /events/{eventId} {
      // Allow anyone to read events for the public-facing pages.
      allow get, list: if true;

      // Only authenticated users with an 'admin' role can create, update, or delete events.
      // This rule works by first allowing the user's own profile to be read (from the rule above),
      // then checking the 'role' field on that profile.
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
