
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // A user can read their own profile, which is needed to check the 'role' field.
    match /users/{userId} {
      allow read, create: if request.auth != null && request.auth.uid == userId;
      allow update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Rules for the events collection
    match /events/{eventId} {
      // Anyone can read events for the public site.
      allow get, list: if true;

      // Only authenticated users with an 'admin' role can create, update, or delete events.
      // This rule works because the rule on /users/{userId} allows the user to read their own document.
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
